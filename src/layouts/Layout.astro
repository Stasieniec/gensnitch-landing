---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Detect AI-generated images as you browse. A Chrome extension that analyzes image metadata locally to identify AI signatures.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0a0a" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header>
        <a href="/" class="logo">GenSnitch</a>
        <nav>
          <a href="/privacy">Privacy</a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <p>&copy; {new Date().getFullYear()} GenSnitch · Made by <a href="https://swasilewski.com" target="_blank" rel="noopener noreferrer">Stanisław Wasilewski</a></p>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    --bg: #0a0a0a;
    --bg-elevated: #141414;
    --border: #262626;
    --text: #fafafa;
    --text-muted: #a1a1a1;
    --accent: #22c55e;
    --accent-dim: #166534;
    --font-sans: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    --font-mono: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas, monospace;
  }

  html {
    font-family: var(--font-sans);
    background: var(--bg);
    color: var(--text);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    min-height: 100vh;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  a:hover {
    color: var(--accent);
  }
</style>

<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
    border-bottom: 1px solid var(--border);
  }

  .logo {
    font-weight: 600;
    font-size: 1.125rem;
    letter-spacing: -0.02em;
  }

  nav a {
    font-size: 0.875rem;
    color: var(--text-muted);
    transition: color 0.15s;
  }

  main {
    flex: 1;
    padding: 4rem 0;
  }

  footer {
    padding: 2rem 0;
    border-top: 1px solid var(--border);
  }

  footer p {
    font-size: 0.75rem;
    color: var(--text-muted);
  }
</style>

